<div class="container-fluid h-100">
    <div class="row justify-content-center h-100">
      <div class="col-md-4 col-xl-3 chat">
        <div class="card mb-sm-3 mb-md-0 contacts_card">

        <div class="card-body contacts_body">
          <ui class="contacts">
            <% @users.each do |user| %>
              <li>
                  <div class="user_info">
                    <span> <%=user.username %></span>
                  </div>
                  <div class="img_cont">
                    <% if user.status == "online" %>
  									   <span class="online_icon"></span>
                    <% elsif user.status == "away" %>
                      <span class="online_icon away"></span>
                    <% elsif user.status == "off" %>
                      <span class="online_icon offline"></span>
                    <% end %>
                  </div>
              </li>
            <% end %>
          </ui>
        </div>
      </div>
    </div>
      <div class="col-md-8 col-xl-6 chat">
        <div class="card">
          <div class="card-header msg_head">
            <div class="d-flex bd-highlight">
              <div class="user_info">
                <span>Chat <%= current_user.username %></span>
              </div>
            </div>
          </div>
          <div class="card-body msg_card_body">
            <div id="msg-card">
              <% @messages.each do |msg| %>
                <div class="d-flex justify-content-start mb-4">
                    <div class="msg_cotainer" id="messages">
                        <p><%= msg.content %></p>
                    </div>
                </div>
              <% end %>
            </div>
          </div>

          <div class="card-footer">
						<div class="input-group">
              <%= form_with(url: messages_oi_path) do |f| %>
                <%= f.text_area :content, class: "form-control type_msg" %>
                <div class="input-group-append send-container">
                  <%= f.submit "Enviar", class: "input-group-text send_btn" %>
                </div>
              <% end %>
						</div>
					</div>

        </div>
      </div>
    </div>
  </div>
